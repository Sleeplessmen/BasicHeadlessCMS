# MongoDB connection URI (Atlas cluster)
MONGO_URI=

# JWT secret key dùng để sign/verify token
JWT_SECRET=

# Node environment: development / production
NODE_ENV=development

# Server port
PORT=1338

# Allowed origins cho CORS, phân cách bằng dấu phẩy
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:1338

# Key dùng để encrypt dữ liệu (ví dụ các field encrypt trong model)
DATA_ENCRYPTION_KEY=

# Optional: BASE_URL, dùng để generate links trong email hoặc API
BASE_URL=http://localhost:1338

# Optional: internal email address (ví dụ email support)
INTERNAL_EMAIL=

# Optional: session secret nếu bật session
SESSION_SECRET=
