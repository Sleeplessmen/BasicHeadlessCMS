{
    "name": "backend",
    "private": true,
    "version": "2.0.0",
    "description": "A Sails backend server",
    "type": "commonjs",
    "main": "app.js",
    "_moduleAliases": {
        "@controllers": "api/controllers",
        "@services": "api/services",
        "@policies": "api/policies",
        "@helpers": "api/helpers",
        "@models": "api/models",
        "@responses": "api/responses",
        "@config": "config",
        "@errors": "errors",
        "@scripts": "scripts"
    },
    "scripts": {
        "dev": "cross-env NODE_ENV=development sails lift",
        "dev:nodemon": "cross-env NODE_ENV=development nodemon",
        "start": "cross-env NODE_ENV=production sails lift",
        "pm2:start": "cross-env NODE_ENV=development pm2 start ecosystem.config.js",
        "pm2:restart": "pm2 restart backend",
        "pm2:stop": "pm2 stop backend",
        "lint": "eslint . --max-warnings=0 --report-unused-disable-directives && echo ' All good.'",
        "test": "mocha test/**/*.test.js --timeout 10000"
    },
    "dependencies": {
        "@sailshq/lodash": "^3.10.6",
        "ajv": "^8.17.1",
        "bcryptjs": "^3.0.2",
        "dotenv": "^17.1.0",
        "express-rate-limit": "^8.0.1",
        "grunt": "^1.6.1",
        "joi": "^17.13.3",
        "jsonwebtoken": "^9.0.2",
        "mocha": "^11.7.2",
        "module-alias": "^2.2.3",
        "path": "^0.12.7",
        "pm2": "^6.0.13",
        "sails": "^1.5.14",
        "sails-hook-orm": "^4.0.3",
        "sails-hook-sockets": "^3.0.0",
        "sails-mongo": "^2.1.2",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1"
    },
    "devDependencies": {
        "cross-env": "^10.0.0",
        "eslint": "^9.34.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "nodemon": "^3.1.10",
        "prettier": "^3.6.2"
    },
    "engines": {
        "node": ">=16 <21"
    },
    "license": "MIT"
}
