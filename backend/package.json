        "fs-extra": "^11.3.2",
        "joi": "^17.13.3",
        "jsonwebtoken": "^9.0.2",
        "mocha": "^11.7.2",
        "module-alias": "^2.2.3",
        "path": "^0.12.7",
        "redis": "^5.8.2",
        "sails": "^1.5.14",
        "sails-hook-orm": "^4.0.3",
        "sails-hook-sockets": "^3.0.0",
        "sails-mongo": "^2.1.2",
        "supertest": "^7.1.4",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1"
    },
    "devDependencies": {
        "cross-env": "^10.0.0",
        "eslint": "^9.34.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "prettier": "^3.6.2"
